<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.JianxuefenchufaDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.JianxuefenchufaEntity" id="jianxuefenchufaMap">
        <result property="chufabianhao" column="chufabianhao"/>
        <result property="xueshengzhanghao" column="xueshengzhanghao"/>
        <result property="xueshengxingming" column="xueshengxingming"/>
        <result property="xuefen" column="xuefen"/>
        <result property="jianxuefenyuanyin" column="jianxuefenyuanyin"/>
        <result property="dengjishijian" column="dengjishijian"/>
        <result property="suguanzhanghao" column="suguanzhanghao"/>
        <result property="suguanxingming" column="suguanxingming"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.JianxuefenchufaVO" >
		SELECT * FROM jianxuefenchufa  jianxuefenchufa         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.JianxuefenchufaVO" >
		SELECT  jianxuefenchufa.* FROM jianxuefenchufa  jianxuefenchufa 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.JianxuefenchufaView" >

		SELECT  jianxuefenchufa.* FROM jianxuefenchufa  jianxuefenchufa 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.JianxuefenchufaView" >
		SELECT * FROM jianxuefenchufa  jianxuefenchufa <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM jianxuefenchufa
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
        limit 10
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM jianxuefenchufa
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM jianxuefenchufa
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM jianxuefenchufa
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM jianxuefenchufa
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
        limit 10
    </select>



</mapper>
